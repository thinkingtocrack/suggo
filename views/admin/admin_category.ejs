<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/bootstrap') %>
    <link rel="stylesheet" href="/stylesheets/admin/admin_category.css">
</head>
<body>
    <%- include('../partials/adminheader') %>
    <main>
        <%- include('./partials/sidebar.ejs') %>
        <div class="admintable">
            <h4>Overview</h4>
            <div class="usersearch">
                <input type="text" placeholder="find Category">
                <a href="/admin/category/new">+ new category</a>
            </div>
            <table>
                <tr>
                    <th style="width: 300px;">Category</th>
                    <th style="width: 300px;"></th>
                </tr>
                <% data.forEach(element=> { %>
                    <tr>
                        <td>
                            <%= element.category %>
                        </td>
                        <td>
                            <div class="useredit" style="display: flex;justify-content:space-evenly;">
                                <a class="del" href="/admin/category/deletecategory/<%= element._id %>"><img src="/images/adminicons/trash.png"
                                        alt=""></a>
                                <% if(element.status){ %>
                                    <button style="margin-right: 20px;" onclick="handlestatus(this)" value="<%= element._id %>">ðŸŸ¢
                                        Published</button>
                                    <% }else{ %>
                                        <button style="margin-right: 20px;" onclick="handlestatus(this)" value="<%= element._id %>">ðŸ”´
                                            Un Published</button>
                                        <% } %>
                                            <a href="/admin/category/edit/<%= element._id %>">Edit</a>
                            </div>
                        </td>
                    </tr>
                
                    <% }); %>
            </table>
        </div>
    </main>
    <%- include('../partials/footer') %>

    <div id="status">
        <form action="/admin/category/status">
            <div style="display: flex;justify-content: center;flex-direction: column;align-items: center;">
                <input id="statusid" type="text" hidden name="statusid">
                <div>
                    <label for="unblock">Publish</label>
                    <input name="status" id="unblock" type="radio" value="unblock">
                </div>
                <div>
                    <label for="block">Un Publish</label>
                    <input name="status" id="block" type="radio" value="block">
                </div>
                <button type="submit">ok</button>
            </div>
        </form>
    </div>
    
    
    <script>
        // Get all elements with the class 'confirmation-link'
        const confirmationLinks = document.querySelectorAll('.del');

        // Attach click event listener to each link
        confirmationLinks.forEach(link => {
            link.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent the default link behavior

                // Show a confirmation dialog
                const userConfirmed = confirm('Are you sure you want to delete?');

                // Check the user's choice
                if (userConfirmed) {
                    window.location.href = link.href;
                }
            });
        });
    </script>
    
    <script>
        function handlestatus(button) {
            let buttonvalue = button.value
            let dialog = document.getElementById('status')
            if (window.getComputedStyle(dialog).display == 'none') {
                document.getElementById('statusid').value = buttonvalue
                dialog.style.display = 'block'
            } else {
                dialog.style.display = 'none'
            }
        }
    </script>
</body>
</html>