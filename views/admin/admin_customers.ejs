<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('../partials/bootstrap.ejs') %>
    <link rel="stylesheet" href="/stylesheets/admin/admin_customers.css">
</head>
<body>
    <%- include('../partials/adminheader.ejs') %>
    <main>
        <%- include('./partials/sidebar.ejs') %>
        <div class="admintable" >
            <h4>Overview</h4>
            <div class="usersearch">
                <input type="text" placeholder="find user">
                <a href="">+ new user</a>
            </div>
            <table style="margin-top: 30px;">
                <tr>
                    <th>Username-ID</th>
                    <th>Name</th>
                    <th>Phone-no</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th style="width: 250px;"></th>
                </tr>
                <% data.forEach(element => { %>
                    <tr>
                        <td><%= element._id %></td>
                        <td><%= element.name %></td>
                        <td><%= element.phone %></td>
                        <td><%= element.email %></td>
                        <td>
                            <p style="overflow: auto;"><%= element?.address?.homeno+','+element?.address?.city+','+element?.address?.pincode %></p>
                        </td>
                        <td>
                            <div class="useredit">
                                <a class="del" href="/admin/deleteuser/<%= element._id %>"><img src="/images/adminicons/trash.png" alt=""></a>
                                <% if(element.status){ %>
                                    <button onclick="handlestatus(this)" value="<%= element._id %>">ðŸŸ¢ active</button>
                                <% }else{ %>
                                    <button onclick="handlestatus(this)" value="<%= element._id %>">ðŸ”´ not active</button>
                                <% } %>

                                <a class="aedit" href="">edit</a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </table>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>

    <div id="status">
        <form action="/admin/customer/status">
            <div style="display: flex;justify-content: center;flex-direction: column;align-items: center;">
                <input id="statusid" type="text" hidden name="statusid">
                <div>
                    <label for="unblock">unblock</label>
                    <input name="status" id="unblock" type="radio" value="unblock">
                </div>
                <div>
                    <label for="block">block</label>
                    <input name="status" id="block" type="radio" value="block">
                </div>
                <button type="submit">ok</button>
            </div>
        </form>
    </div>

    <script>
        // Get all elements with the class 'confirmation-link'
        const confirmationLinks = document.querySelectorAll('.del');

        // Attach click event listener to each link
        confirmationLinks.forEach(link => {
            link.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent the default link behavior

                // Show a confirmation dialog
                const userConfirmed = confirm('Are you sure you want to delete?');

                // Check the user's choice
                if (userConfirmed) {
                    window.location.href= link.href;
                }
            });
        });
    </script>
    <script>
        function handlestatus(button) {
                let buttonvalue=button.value
                let dialog = document.getElementById('status')
                if(window.getComputedStyle(dialog).display=='none'){
                    document.getElementById('statusid').value=buttonvalue
                    dialog.style.display = 'block'
                }else{
                    dialog.style.display = 'none'
                }
            }
    </script>
</body>
</html>